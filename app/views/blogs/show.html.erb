<section class="vh-150  py-5 " >
  <div class="container py-5 h-100 " >
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col col-lg-9 col-xl-9">
        <div class="card">
          <div class="card-body p-4 ">
            <div class="text-center my-3 pb-3">
              <%= image_tag("https://cdn.emojidex.com/emoji/xxxhdpi/Ruby.png", class:'mb-2 mt-2')%>
              <h1 >Ruby Go </h1>  
             </div> 
            
              <article class="blog-card ptsans contentBlog">
                <div>
                  <h2><%= @blog.title %></h2>
                  
                  <p>Tags: <%= link_to @blog.category.category, blogs_path(:cate => @blog.category_id), class: "italic-text-tags" %></p>
                </div>
                <div class="mt-5">
                  <%= @blog.content  %>
                </div>
              </article>
             
                <div class="btn-align">             
                <%= link_to "Back", blogs_path, class: "btn btn-primary" %>              
               </div>
            <% if current_user.id == @blog.user_id %>
              <div class="btn-align">
                <%= link_to "Edit", edit_blog_path(@blog.id), class: "btn btn-secondary" %>
              </div>              
               <div class="btn-align"> 
                <%= link_to "Delete", @blogs, data:{ turbo_method: :delete, turbo_confirm: "Are you sure you want to delete #{@blog.title} post?"}, class: "btn btn-danger", method: :delete %>                 
              </div>         
            <%end%>
            
          </div>
        </div> 
      </div>
    </div>
  </div>
</section>